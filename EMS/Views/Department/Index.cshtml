@model IEnumerable<EMS.Models.Department>


@{
    ViewBag.Title = "Index";
}

<h2>Department Record</h2>
@if (TempData["InsertMessage"] != null)
{
  <div class="alert alert-success alert-dismissible">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <strong>Success!</strong>@TempData["InsertMessage"]
  </div>
}
@if (TempData["UpdateMessage"] != null)
{
   <div class="alert alert-success alert-dismissible">
       <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
       <strong>Success!</strong>@TempData["UpdateMessage"]
   </div>
}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong>@TempData["DeleteMessage"]
    </div>
}

<p>
    @Html.ActionLink("Create New", "Create", new { area = "" }, new { @type = "button", @class = "btn btn-primary" })
</p>
<section>
    <div class="dropdown">
        <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown">
            Select Department
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            @foreach (var item in Model)
            {

                <li>
                    @Html.ActionLink(item.Name, "Employees", new { name = item.Name })
                </li>

            }

        </ul>
    </div>
</section>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manager)
        </th>
        <th align="center"> Action </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Manager)
        </td>
            <td align="center">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @type = "button", @class = "btn btn-primary" }) |

                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @type = "button", @class = "btn btn-success" })
                |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @type = "button", @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

